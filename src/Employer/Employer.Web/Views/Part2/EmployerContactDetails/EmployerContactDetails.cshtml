@model Esfa.Recruit.Employer.Web.ViewModels.EmployerContactDetailsViewModel
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-6">@Model.Title</h1>
        <hr>
        <partial name="@PartialNames.ValidationSummary" model='new ValidationSummaryViewModel { ModelState = ViewData.ModelState, OrderedFieldNames = Model.OrderedFieldNames }' />

        <partial name="@PartialNames.ReviewSummary" for="Review" />

        <form asp-route="@RouteNames.EmployerContactDetails_Post" novalidate>
            <div esfa-validation-marker-for="EmployerContactName" class="govuk-form-group">
                <label asp-for="EmployerContactName" class="form-label-bold">Contact name (optional)</label>
                <span esfa-validation-message-for="EmployerContactName" class="error-message"></span>
                <input asp-for="EmployerContactName" class="form-control" maxlength="100" />
            </div>
            <div esfa-validation-marker-for="EmployerContactEmail" class="govuk-form-group">
                <label asp-for="EmployerContactEmail" class="form-label-bold">Contact email (optional)</label>
                <span esfa-validation-message-for="EmployerContactEmail" class="error-message"></span>
                <input asp-for="EmployerContactEmail" class="form-control" maxlength="100" />
            </div>
            <div esfa-validation-marker-for="EmployerContactPhone" class="govuk-form-group">
                <label asp-for="EmployerContactPhone" class="form-label-bold">Contact number (optional)</label>
                <span esfa-validation-message-for="EmployerContactPhone" class="error-message"></span>
                <input asp-for="EmployerContactPhone" class="form-control" type="tel" maxlength="16" />
            </div>
            <div class="govuk-form-group">
                <input type="submit" value="Save and continue" esfa-automation="btn-continue" class="button save-button" />
                <a asp-route="@RouteNames.Vacancy_Preview_Get" esfa-automation="link-cancel" class="button-link">Cancel</a>
            </div>
        </form>
    </div>
</div>