@model Esfa.Recruit.Employer.Web.ViewModels.Part1.SearchResultPreview.SearchResultPreviewViewModel
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-6">Your vacancy summary</h1>
        <div class="todo">
            <h2 class="govuk-heading-m govuk-!-margin-top-6">@Model.Title</h2>
            <ul class="list">
                <li class="secondary-text">@Model.EmployerName</li>

                <li class="font-xsmall secondary-text">
                    <span id="date-and-positions">@Model.NumberOfPositionsCaption</span>
                </li>
            </ul>
            
            <p id="preview_short_description">@Model.ShortDescription</p>
            
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <ul class="list sfa-no-margins vacancy-details-list">
                        <li>
                            <span class="bold-small">Closing date:</span>
                            <span>@Model.ClosingDate</span>
                        </li>
                        <li>
                            <span class="bold-small">Possible start date:</span>
                            <span>@Model.StartDate</span>
                        </li>
                        <li>
                            <span class="bold-small">Apprenticeship level:</span>
                            <span>@Model.LevelName</span>
                        </li>
                        <li>
                            <span class="bold-small">Wage:</span>
                            <span>@Model.Wage</span><span asp-show="@Model.HasYearlyWage"> yearly</span>
                        </li>
                    </ul>

                    <img asp-show="@Model.IsDisabilityConfident" src="/img/disability-confident_545x172.png" alt="A logo confirming that the employer is registered as disability confident" class="disability-confident-logo-big" />
                    <partial name="@PartialNames.DisabilityConfident" for="IsDisabilityConfident" />

                </div>
                <div class="govuk-grid-column-one-third map-container hide-nojs toggle-content--mob">
                    @if (!string.IsNullOrWhiteSpace(Model.MapUrl))
                    {
                    <img id="static-map" class="static-map" src="@Model.MapUrl">
                    }
                </div>
            </div> 
        </div>
        <div class="govuk-form-group inline">
            <div class="govuk-form-group govuk-!-margin-top-6">
                <a asp-route="@RouteNames.Vacancy_Preview_Get" esfa-automation="link-continue" class="button">Add full vacancy details</a>
                <a asp-route="@RouteNames.Title_Get" esfa-automation="link-change" class="button-link">Make changes</a>
                <a asp-route="@RouteNames.Dashboard_Index_Get" esfa-automation="link-dashboard" class="button-link">Return to dashboard</a>
            </div>
        </div>
    </div>
</div>
