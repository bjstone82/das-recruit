@model Esfa.Recruit.Employer.Web.ViewModels.VacancyManage.ManageVacancyViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds govuk-!-margin-bottom-6">
        <h3 class="govuk-heading-xl govuk-!-margin-top-6 govuk-!-margin-bottom-6" id="vacancy-header">
            Manage vacancy
        </h3>
        <div asp-show="Model.HasVacancyClosedInfoMessage" class="info-summary govuk-!-margin-bottom-0">
            <p>
                <p>@Model.VacancyClosedInfoMessage</p>
                <p>The vacancy will be unpublished from the Find an apprenticeship service within the next hour.</p>
            </p>
        </div>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
        <h3 class="govuk-heading-s govuk-!-margin-top-0 govuk-!-margin-bottom-6">Status</h3>
    </div>
    <div class="govuk-grid-column-two-thirds">
        @Model.Status.GetDisplayName()
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
        <h3 class="govuk-heading-s govuk-!-margin-top-0 govuk-!-margin-bottom-6">Vacancy title</h3>
    </div>
    <div class="govuk-grid-column-two-thirds">
        @Model.Title
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
        <h3 class="govuk-heading-s govuk-!-margin-top-0 govuk-!-margin-bottom-6">Vacancy ref</h3>
    </div>
    <div class="govuk-grid-column-two-thirds">
        <span>VAC</span>@Model.VacancyReference
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
        <h3 class="govuk-heading-s govuk-!-margin-top-0 govuk-!-margin-bottom-6">Closing date</h3>
    </div>
    <div class="govuk-grid-column-two-thirds">
        @Model.ClosingDate
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
        <h3 class="govuk-heading-s govuk-!-margin-top-0 govuk-!-margin-bottom-6">Possible start date</h3>
    </div>
    <div class="govuk-grid-column-two-thirds">
        @Model.PossibleStartDate
    </div>
</div>
<div asp-show="@Model.IsDisabilityConfident" class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
        <h3 class="govuk-heading-s govuk-!-margin-top-0 govuk-!-margin-bottom-6">Disability confident</h3>
    </div>
    <div class="govuk-grid-column-two-thirds">
        <span>Yes</span>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <ul class="action-links">
            <li asp-show="@Model.CanShowEditVacancyLink"><a asp-route="@RouteNames.VacancyEdit_Get">Edit vacancy</a></li>
            <li asp-show="@Model.CanShowCloseVacancyLink"><a asp-route="@RouteNames.CloseVacancy_Get">Close vacancy</a></li>
            <li><a asp-route="@RouteNames.DisplayFullVacancy_Get" target="_blank">View vacancy</a></li>
        </ul>
    </div>
</div>

<div asp-show="@Model.IsApplyThroughFaaVacancy" class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h2 class="govuk-heading-l">Manage applications</h2>
        <partial asp-show="@Model.HasApplications" name="@PartialNames.VacancyApplicationsTable" for="Applications" />
        <p asp-show="@Model.HasNoApplications" class="no_bottom_margin">Candidate applications for this apprenticeship will appear here.</p>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <div class="govuk-!-margin-top-6">
            <a asp-route="@RouteNames.Dashboard_Index_Get" class="govuk-button">Return to dashboard</a>
        </div>
    </div>
</div>